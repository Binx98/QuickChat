<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quick.mapper.QuickChatSessionMapper">
    <!--查询唯独数量-->
    <select id="getUnreadCount" resultType="com.quick.pojo.vo.UnreadCountVO">
        SELECT
            relation_id,
            COUNT(*) AS unreadCount
        FROM
            quick_chat_msg
        WHERE
            relation_id = #{relationId}
          AND create_time > #{lastReadTime}
        GROUP BY
            relation_id
    </select>
</mapper>
